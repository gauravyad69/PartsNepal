<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/themebackground_main"
    tools:context=".Screens.MainScreens.ProductFragment">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:scrollbars="none"
        android:layout_marginBottom="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignBounds"
            android:columnCount="2"
            android:useDefaultMargins="true">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_columnSpan="2"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                android:clipChildren="true"
                android:clipToPadding="true">
                <!-- Existing elements -->
                <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                    android:id="@+id/carousel"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:imageScaleType="centerCrop"
                    app:showNavigationButtons="false"
                    app:carouselBackground="@drawable/background_card"
                    android:background="@drawable/background_card"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/regularPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="8dp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/inter_bold"
                android:text="$299.99" />

            <TextView
                android:id="@+id/salePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:fontFamily="@font/inter_bold"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:backgroundTint="@color/light_blue_A400"
                android:translationY="-5dp"
                android:text="$299.99" />

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:fontFamily="@font/inter_bold"
                android:text="Pro Wireless Headphones" />


            <!-- Description Section -->
            <TextView
                android:id="@+id/descriptionTitle"
                style="@style/product_main_subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="16dp"
                android:text="Description" />

            <TextView
                android:id="@+id/productDescription"
                style="@style/product_main_description_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="8dp"
                android:text="Experience unparalleled audio quality..."
                android:textColor="#757575" />

            <!-- Features Section -->
            <TextView
                android:id="@+id/featuresTitle"
                style="@style/product_main_subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="16dp"
                android:text="Features" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featuresRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:clickable="false"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp" />

<!--            &lt;!&ndash; Product Images Gallery &ndash;&gt;-->
<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/productImagesRecyclerView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_columnSpan="2"-->
<!--                android:layout_marginTop="16dp" />-->

            <!-- Delivery Information -->
            <TextView
                android:id="@+id/deliveryTitle"
                style="@style/product_main_subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="16dp"
                android:text="Delivery Information" />

            <LinearLayout
                android:id="@+id/deliveryInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/estimatedDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#757575"
                    android:fontFamily="@font/inter_bold"
                    tools:text="Estimated delivery: 3 days" />

                <TextView
                    android:id="@+id/shippingCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="#757575"
                    tools:text="Shipping cost: $10" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/deliveryOptionsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:nestedScrollingEnabled="false"
                    />
            </LinearLayout>

            <!-- Warranty Information -->
            <TextView
                android:id="@+id/warrantyTitle"
                style="@style/product_main_subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="16dp"
                android:text="Warranty Information" />

            <LinearLayout
                android:id="@+id/warrantyInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/warrantyPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#757575"
                    android:fontFamily="@font/inter_bold"
                    tools:text="Warranty period: 12 months" />

                <TextView
                    android:id="@+id/returnPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#757575"
                    android:fontFamily="@font/inter_bold"
                    tools:text="Return period: 30 days" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/warrantyTermsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clickable="false"
                    android:nestedScrollingEnabled="false"
                    />
            </LinearLayout>

            <!-- Reviews Section -->
            <TextView
                android:id="@+id/reviewsTitle"
                style="@style/product_main_subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="16dp"
                android:text="Reviews" />

            <include
                android:id="@+id/reviewsSection"
                layout="@layout/reviews_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="8dp" />
        </GridLayout>
    </ScrollView>



    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addToCartButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Add to Cart"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ProgressBar
        android:id="@+id/addToCartProgress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/addToCartButton"
        app:layout_constraintEnd_toEndOf="@id/addToCartButton"
        app:layout_constraintStart_toStartOf="@id/addToCartButton"
        app:layout_constraintTop_toTopOf="@id/addToCartButton"/>

    <ImageView
        android:id="@+id/addToCartSuccess"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_check_circle"
        android:visibility="gone"
        app:tint="@color/status_success"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>