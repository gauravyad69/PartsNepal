<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.MainScreens.PaymentFragment">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!--      android:background="?attr/fullscreenBackgroundColor"
        android:theme="@style/ThemeOverlay.PartsNepal.FullscreenContainer"
      -->





    <!-- Header Text -->
    <TextView
        android:id="@+id/paymentMethodsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Methods"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"/>

    <!-- Single layout for all payment methods -->
    <GridLayout
        android:id="@+id/payKhalti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:columnOrderPreserved="false">

        <!-- Khalti Payment Option -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_khalti"
                android:contentDescription="Khalti Payment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khalti"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center" />
        </LinearLayout>

        <!-- eBanking Payment Option -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_ebanking"
                android:contentDescription="eBanking Payment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="eBanking"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center" />
        </LinearLayout>

        <!-- Mobile Banking Payment Option -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_mobilebanking"
                android:contentDescription="Mobile Banking Payment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Banking"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center" />
        </LinearLayout>

        <!-- SCT/VISA Payment Option -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_visa"
                android:contentDescription="SCT/VISA Payment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCT/VISA"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center" />
        </LinearLayout>

        <!-- connectIPS Payment Option -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_connectips"
                android:contentDescription="connectIPS Payment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="connectIPS"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center" />
        </LinearLayout>

    </GridLayout>


</LinearLayout>