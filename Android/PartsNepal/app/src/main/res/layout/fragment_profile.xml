<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/themeMainBackground"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".Screens.NavScreens.ProfileFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        style="@style/themeCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:orientation="horizontal"
            android:padding="16dp"
            android:rowCount="4">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                app:shapeAppearance="@style/MyShapeAppearance"
                tools:src="@tools:sample/avatars" />


            <TextView
                android:id="@+id/tvUserFirstAndLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/stylus_24dp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/offwhite"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="User"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/inter_regular"
                android:text="Email"
                android:textAlignment="center" />

        </GridLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/currentTierCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/themeCards"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:id="@+id/container_package_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:text="Your Active Packages:"/>

            <TextView
                android:id="@+id/tvPackageOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_medium"
                android:text="Intraday Free, 1 Week"
                android:drawableEnd="@drawable/round_keyboard_arrow_right_24"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPackageTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:drawableEnd="@drawable/round_keyboard_arrow_right_24"
                android:fontFamily="@font/inter_medium"
                android:text="Quotex Bronze, 1 Month"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPackageThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:drawableEnd="@drawable/round_keyboard_arrow_right_24"
                android:fontFamily="@font/inter_medium"
                android:text="Binary Gold, 1 Week"
                android:visibility="gone"
                android:textSize="18sp" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnExlporePlans"
        style="@style/themeCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentTierCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/inter_bold"
                android:text="Click here to explore our other plans"
                android:textSize="18sp" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>