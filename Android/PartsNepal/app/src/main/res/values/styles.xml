<resources>

    <style name="Widget.Theme.PartsNepal.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


    <style name="Widget.Theme.TradersArea.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="item_signal_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.Theme.TradersArena.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Widget.Theme.TradersArena.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="MyShapeAppearance">MyShapeAppearance
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>


    <style name="product_list_card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
                <item name="strokeColor">@color/card_stroke</item>
                <item name="strokeWidth">1dp</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="product_list_chip" parent="textStyle">
        <item name="textColor">@color/white</item>
        <!--        <item name="strokeColor">@color/card_stroke</item>-->
        <!--        <item name="strokeWidth">2dp</item>-->
        <item name="elevation">2dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipBackgroundColor">@color/sale_red</item>
    </style>


    <style name="product_main_heading_text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="product_main_subheading" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="product_main_description_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">#757575</item>
    </style>


    <style name="product_list_price_sale" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="product_list_price_regular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Base.Theme.PartsNepal.Light.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="headlineTextStyle" parent="">
        <item name="android:fontFamily">@font/monasans_bold</item>
