<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
<!--            <pattern>-->
<!--                %highlight(%d{YYYY-MM-dd HH:mm:ss.SSS}){faint} %highlight([%thread]){cyan} %highlight(%-5level){level} %highlight(%logger{36}){green} - %msg%n-->
<!--            </pattern>-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %X{request-id} %-5level %logger{36} - %msg%n</pattern>

        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="org.eclipse.jetty" level="INFO"/>
    <logger name="io.netty" level="INFO"/>
    <logger name="org.mongodb.driver" level="WARN"/>

    <!-- Reduce the default log level for HTTP calls to DEBUG -->
    <logger name="io.ktor.server" level="DEBUG"/>
</configuration>
